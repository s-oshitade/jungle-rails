<div style="margin: auto; padding:20px; width: auto">
 <h2 style="text-align: center">Please signup here...</h2>
<div>

<%= form_for :user, url: '/users' do |f| %>
  <div class="card" style="width:500px; margin: auto">
    <div class="card-body" style="margin: auto">
      <div class="mb-3" style="width:400px; margin: auto">
        <%= f.label :firstname, { class: "form-label"} %>
        <%= f.text_field :firstname, { class: "form-control", placeholder: "Insert firstname" } %>
      </div>
  
      <div class="mb-3" style="width:400px; margin: auto">
        <%= f.label :lastname, { class: "form-label"} %>
        <%= f.text_field :lastname, { class: "form-control", placeholder: "Insert lastname" } %>
      </div>
  
      <div class="mb-3" style="width:400px; margin: auto">
        <%= f.label :email, { class: "form-label"} %>
        <%= f.text_field :email, { class: "form-control", placeholder: "Instert email" } %>
      </div>

      <div class="mb-3" style="width:400px; margin: auto">
        <%= f.label :password, { class: "form-label"} %>
        <%= f.password_field :password, { class: "form-control", placeholder: "Insert lastname" } %>
      </div>
      
      <div class="mb-3" style="width:400px; margin: auto">
        <%= f.label :password_confirmation, { class: "form-label"} %>
        <%= f.password_field :password_confirmation, { class: "form-control", placeholder: "Confirm password" } %>
      </div>

        <%= f.submit "Submit", class: "btn btn-primary" %>
  
    </div>
  </div>
  <% end %>